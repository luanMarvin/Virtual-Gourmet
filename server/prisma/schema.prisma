datasource db {
  provider = "postgresql"
  url      = "postgresql://development_testing:1234@localhost:5432/virtual-gourmet"
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id          Int         @id @default(autoincrement())
  dishType    String
  diet        String
  difficulty  String
  name        String
  rating      Float
  isFavorite  Boolean
  ingredients Ingredient[]
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  name     String
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
}